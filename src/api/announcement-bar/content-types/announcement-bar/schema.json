{
  "kind": "singleType",
  "collectionName": "announcement_bars",
  "info": {
    "singularName": "announcement-bar",
    "pluralName": "announcement-bars",
    "displayName": "Announcement Bar"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "description": {
      "type": "richtext"
    },
    "position": {
      "type": "enumeration",
      "enum": [
        "above header",
        "below header"
      ],
      "default": "above header"
    },
    "text_align": {
      "type": "enumeration",
      "enum": [
        "center",
        "left",
        "right"
      ],
      "default": "center"
    },
    "text_color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "background_color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    }
  }
}
